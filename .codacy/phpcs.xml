<?xml version="1.0"?>
<ruleset name="Codacy PHPCS">
    <description>Codacy-friendly ruleset using standards available in the Codacy image.</description>

    <!-- Scan PHP files -->
    <arg name="extensions" value="php"/>
    <file>.</file>

    <!-- Ignore typical non-source dirs -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/bin/*</exclude-pattern>

    <!-- Use standards Codacy ships with (avoid Pantheon-WP) -->
    <rule ref="WordPress-Core"/>
    <rule ref="WordPress-Docs"/>
    <rule ref="PHPCompatibilityWP"/>

    <!-- Match your minimum PHP/WP target as needed -->
    <config name="testVersion" value="7.3-"/>
    <config name="minimum_supported_wp_version" value="6.4"/>
</ruleset>
